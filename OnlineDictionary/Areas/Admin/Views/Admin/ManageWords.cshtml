@model IEnumerable<OnlineDictionary.Models.Word>
@{
    ViewData["Title"] = "Manage words";
}

<h1 style="text-align: center;" class="pt-3">@ViewData["Title"]</h1>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-white">Word List</h2>
        </div>
        <div class="col-6 text-end" style="padding-right:0;">
            <a asp-controller="Admin" asp-action="AddWord" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Add new word
            </a>
        </div>
    </div>
    <br />
</div>
<div class="row">
        @foreach (var obj in Model)
        {
            <div class="col-sm-4 mb-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <div class="mb-2">
                            <span class="fw-bold">@obj.Name</span>
                            <br />
                            @if (obj.Language != null){
                                <span class="text-muted">@obj.Language?.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No language</span>
                            }
                            <br />
                            <span class="text-muted">@obj.Description</span>
                        </div>
                        <hr />
                        <div class="d-flex flex-row gap-2" role="group">
                            <a class="btn btn-primary w-100" asp-controller="Admin" asp-action="EditWord" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger w-100" asp-controller="Admin" asp-action="RemoveWord" asp-route-id="@obj.Id">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>
<div class="d-flex justify-content-center mt-4 mb-5">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back</a>
</div>

