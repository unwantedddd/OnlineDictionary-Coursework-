@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<OnlineDictionary.Models.Language>
@{
    ViewData["Title"] = "Manage languages";
    var failureText = TempData["failure"] as string;
}

<h1 style="text-align: center;" class="pt-3">@ViewData["Title"]</h1>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-white">Languages List</h2>
        </div>
        <div class="col-6 text-end" style="padding-right:0;">
            <a asp-controller="Admin" asp-action="AddLanguage" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Add new language
            </a>
        </div>
    </div>
    <br />
</div>

@if (failureText != null)
{
    <div class="alert alert-warning text-center mt-4">
        <strong>You can`t delete the language!</strong> At least one word is in there.
    </div>
}

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Languages</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="80%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Admin" asp-action="EditLanguage" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Admin" asp-action="RemoveLanguage" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center mt-4 mb-5">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back</a>
</div>
