@model OnlineDictionary.Models.Language;

<form method="post" asp-action="EditLanguage">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-dark">Edit language</h2>
			<hr />
		</div>
		<div class="form-floating mb-3">
			<input asp-for="Name" class="form-control" />
			<label asp-for="Name"></label>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-floating mb-3">
			<input asp-for="Code" class="form-control" />
			<label asp-for="Code"></label>
			<span asp-validation-for="Code" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary w-100 text-white">Update</button>
		<a asp-controller="Admin" asp-action="ManageLanguage" class="btn btn-secondary w-100">Back</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
